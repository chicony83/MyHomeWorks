<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DZ7SplashFragment">

    <ImageButton
        android:id="@+id/button_start_anim_congratulation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/style_button_start_congratulation"
        android:scaleType="centerCrop"
        android:src="@drawable/sunflower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_on_button_start_anim_congratulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="поздравление"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/button_start_anim_congratulation"
        app:layout_constraintStart_toStartOf="@+id/button_start_anim_congratulation"
        app:layout_constraintTop_toBottomOf="@+id/button_start_anim_congratulation" />

</androidx.constraintlayout.widget.ConstraintLayout>